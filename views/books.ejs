<!DOCTYPE html>
<html>
<head>
    <title>Books List</title>
    <%- include('common/styles') %>
</head>
<body>
    <%- include('common/navbar') %>
    <h1>Books List</h1>
    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Summary</th>
                <th>Publication Date</th>
                <th>Reviews</th>
                <th>Total Sales</th>
            </tr>
        </thead>
        <tbody>
            <% books.forEach(book => { %>
                <tr>
                    <td><%= book.title %></td>
                    <td><%= book.summary %></td>
                    <td><%= book.publicationDate.toDateString() %></td>
                    <td><%= book.reviewCount %></td>
                    <td><%= book.totalSales %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>
